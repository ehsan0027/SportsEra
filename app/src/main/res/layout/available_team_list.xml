<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:layout_margin="2dp"
        android:orientation="vertical"

>

<com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/cardView_Available_team_list"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp"
        android:layout_weight="0.5"
        >
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white_text"
            android:textAllCaps="true"
            android:hint="PAK"
            android:id="@+id/teamShortName_available_team_List"
            android:layout_marginBottom="1dp"

            />


</com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:background="@color/white_layout"
            >

        <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/teamNameTextStyle"
                android:textAlignment="center"
                android:background="@color/cardView"
                android:hint="Pakistan"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/teanFullName_available_team_List"


                />
    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

