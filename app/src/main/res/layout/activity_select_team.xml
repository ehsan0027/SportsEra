<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="view.match.SelectTeamActivity">

    <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tabLayout_SelectTeamActivity"
            style="@style/teamNameTextStyle"
            app:tabIndicator="@color/colorAccent"
            android:background="@color/colorPrimary"


    />
    
    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewPager_SelectTeamActivity"
            app:layout_constraintTop_toBottomOf="@id/tabLayout_SelectTeamActivity"
    >
    </androidx.viewpager.widget.ViewPager>


</androidx.constraintlayout.widget.ConstraintLayout>
