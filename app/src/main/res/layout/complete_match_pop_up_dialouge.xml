<?xml version="1.0" encoding="utf-8"?>

<com.github.florent37.shapeofview.shapes.BubbleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:shape_bubble_arrowHeight="10dp"
    app:shape_bubble_arrowWidth="10dp"
    app:shape_bubble_arrowPosition="bottom"
    app:shape_bubble_borderRadius="20dp"
    android:layout_margin="40dp"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/LightGrey">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Match Complete"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:padding="10dp"
            >

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lahore Lions"
                android:textColor="@color/DarkGoldenrod"
                android:textSize="16sp"
                android:id="@+id/team_A_Name_match_complete_pop_up"
                >
            </TextView>

            <TextView
                android:id="@+id/team_A_Runs_match_complete_pop_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="27"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                >
            </TextView>

            <TextView
                android:id="@+id/team_A_wickets_match_complete_pop_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ("
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:id="@+id/team_A_overs_match_complete_pop_up"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                >
            </TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karachi Eagles"
                android:textColor="@color/SteelBlue"
                android:textSize="16sp"
                android:id="@+id/team_B_Name_match_complete_pop_up"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="78"
                android:textSize="16sp"
                android:id="@+id/team_B_Runs_match_complete_pop_up"
                android:textColor="@color/Black"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:id="@+id/team_B_wickets_match_complete_pop_up"
                android:textColor="@color/Black"
                android:textStyle="bold"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ("
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:id="@+id/team_B_overs_match_complete_pop_up"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                >
            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/winner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Lahore Lions"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" win by "
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/margin_of_victory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                >

            </TextView>

            <TextView
                android:id="@+id/victory_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="runs"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:textStyle="bold">
            </TextView>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Game"
            android:id="@+id/start_next_over_over_card"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/Black"
            >
        </com.google.android.material.button.MaterialButton>

    </LinearLayout>
</com.github.florent37.shapeofview.shapes.BubbleView>
