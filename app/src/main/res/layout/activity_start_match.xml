<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="view.match.StartMatchActivity">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent">

</LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/relativeLayout_StartMatch"
            app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher_round"
                android:id="@+id/team_A_StartMatchActivity"
                android:layout_marginStart="10dp" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/team_A_StartMatchActivity"
                android:textAlignment="center"
                android:text="@string/select_team_a"
                style="@style/teamNameTextStyle"
                android:id="@+id/selected_Team_A_Name_StartMatchActivity"
                android:layout_marginStart="10dp" />

        <com.github.florent37.shapeofview.shapes.StarView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/cardView"
                        android:textStyle="italic"
                        android:text="VS"
                        android:textSize="20sp"/>


            </LinearLayout>


        </com.github.florent37.shapeofview.shapes.StarView>


        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/team_B_StartMatchActivity"
                android:src="@mipmap/ic_launcher_round"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:text="@string/select_team_b"
                android:id="@+id/selected_Team_B_Name_StartMatchActivity"
                android:layout_below="@id/team_B_StartMatchActivity"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                style="@style/teamNameTextStyle"
                android:layout_alignParentRight="true"
                 />
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/inputEditText_linearLayout_StartMatch"
            app:layout_constraintTop_toBottomOf="@id/relativeLayout_StartMatch">

        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/matchType_radio_group"
                >


            <RadioButton
                    android:id="@+id/testMatch_StartMatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test"
                    android:layout_weight="1"
                    android:textSize="18sp" />

            <RadioButton android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limited Over"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:id="@+id/ondayMatch_StartMatch" />
        </RadioGroup>







        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:hintAnimationEnabled="true"
                app:counterMaxLength="3"
                app:hintEnabled="true"
                android:hint="Match Over"
                app:boxStrokeColor="@android:color/holo_green_dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="18dp"
                >
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="3"
                    android:ems="10"
                    android:id="@+id/matchOver_StartMatch"
                    />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                android:hint="Ground"
                app:boxStrokeColor="@android:color/holo_green_dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="18dp"
                >
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/matchGround_StartMatch"
                    />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                android:hint="Date"
                app:boxStrokeColor="@android:color/holo_green_dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="18dp"
                >
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/matchDate_StartMatch"
                    />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                android:hint="Time"
                app:boxStrokeColor="@android:color/holo_green_dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="18dp"
                >
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:ems="10"
                    android:id="@+id/matchTime_StartMatch"
                    />

        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                android:hint="Umpire"
                app:boxStrokeColor="@android:color/holo_green_dark"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="18dp"
                >
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/matchUmpire_StartMatch"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
           app:layout_constraintTop_toBottomOf="@id/inputEditText_linearLayout_StartMatch"

            >










        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text="Ball Type"
                android:layout_marginStart="5dp">

        </TextView>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ballType_radio_group"
                >


            <RadioButton android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TENNIS"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:id="@+id/tapBall_StartMatch"
                     />

            <RadioButton android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LEATHER"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:id="@+id/leatherBall_StartMatch" />
        </RadioGroup>


        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:background="@android:color/transparent"
                android:textColor="@color/colorAccent"
                android:textAllCaps="false"
                app:strokeColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:strokeWidth="1dp"
                android:text="Save"
                android:id="@+id/saveMatch_StartMatchActivity"
                >

        </com.google.android.material.button.MaterialButton>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>