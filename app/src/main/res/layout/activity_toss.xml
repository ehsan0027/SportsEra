<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.match.TossActivity"

    android:clipToPadding="false"
    android:clipChildren="false">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Who won the Toss ?"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:id="@+id/text_labelFor_Toss"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/text_labelFor_Toss"
        android:id="@+id/Toss_TossAcyivity"

        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            //Bowling Card
            <com.google.android.material.card.MaterialCardView
                android:layout_width="130dp"
                android:layout_height="160dp"
                android:clickable="true"
                android:focusable="true"
                android:checkable="true"
                app:checkedIcon="@drawable/team_ready_check"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:strokeColor="@color/Green"
                app:strokeWidth="2dp"
                app:cardElevation="5dp"
                android:id="@+id/teamA_Card_TossActivity"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:id="@+id/teamA_Logo_TossActivity"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        app:civ_border_color="@color/DarkOrange"
                        app:civ_border_width="2dp"
                        android:src="@drawable/team_ready_check"
                        />


                    <TextView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/teamNameTextStyle"
                        android:textAlignment="center"
                        android:background="@android:color/transparent"
                        android:hint="Pakistan"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:id="@+id/teamA_FullName_TossActivity"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            //Batting Card
            <com.google.android.material.card.MaterialCardView
                android:layout_width="130dp"
                android:layout_height="160dp"
                android:clickable="true"
                android:focusable="true"
                android:checkable="true"
                app:checkedIcon="@drawable/team_ready_check"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:strokeColor="@color/Green"
                app:strokeWidth="2dp"
                app:cardElevation="5dp"
                android:id="@+id/teamB_Card_TossActivity"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:id="@+id/teamB_Logo_TossActivity"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/team_ready_check"
                        app:civ_border_color="@color/DarkOrange"
                        app:civ_border_width="2dp"
                        />


                    <TextView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/teamNameTextStyle"
                        android:textAlignment="center"
                        android:background="@android:color/transparent"
                        android:hint="Pakistan"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:id="@+id/teamB_FullName_Logo_TossActivity"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>



    </LinearLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/Toss_TossAcyivity"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="15dp"
            android:text="Toss won Team Elected To"
            android:id="@+id/teamElected_label"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/teamElected_label"
            android:id="@+id/batting_bowling_layout"
            android:layout_margin="10dp"
            >

            //Batting Card
            <com.google.android.material.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:focusable="true"
                android:checkable="true"
                app:checkedIcon="@drawable/team_ready_check"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:strokeColor="@color/Green"
                app:strokeWidth="2dp"
                app:cardElevation="5dp"
                android:id="@+id/batting_Card_TossActivity"
                >

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@color/GhostWhite"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:text="Batting"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:id="@+id/batting_TossActivity"
                    android:clickable="false"
                    />
            </com.google.android.material.card.MaterialCardView>


            //Bowling Card
            <com.google.android.material.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:focusable="true"
                android:checkable="true"
                app:checkedIcon="@drawable/team_ready_check"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:strokeColor="@color/Green"
                app:strokeWidth="2dp"
                app:cardElevation="5dp"
                android:id="@+id/bowling_Card_TossActivity"
                >

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@color/GhostWhite"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:text="Bowling"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:clickable="false"
                    android:id="@+id/bowling_TossActivity"
                    />
            </com.google.android.material.card.MaterialCardView>






        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/batting_bowling_layout"
            android:text="Start Inning"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textAllCaps="false"
            android:id="@+id/startInning_TossActivity"
            >


        </com.google.android.material.button.MaterialButton>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
