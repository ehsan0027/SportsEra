<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/batsman_cardView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="start">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/Gray"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:id="@+id/batsmanImage_batsmanCardView"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batsman A"
            android:id="@+id/batsman_name_batsmanCardView"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:maxLength="15"
            android:textSize="12sp"
            android:textColor="@color/Black"
            />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="4dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/outCause_cardView"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:textSize="12sp"
                    android:text="Not Out"
                    android:id="@+id/player_Status"
                    />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="end">

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:textAlignment="center"
                android:id="@+id/batsman_runs"
                android:textColor="@color/Black"
                android:text="R" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:textAlignment="center"
                android:id="@+id/batsman_balls_played"
                android:textColor="@color/Black"
                android:text="B" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="6dp"
                android:textAlignment="center"
                android:id="@+id/batsman_number_4s"
                android:textColor="@color/Black"
                android:text="4s" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:textAlignment="center"
                android:id="@+id/batsman_number_6s"
                android:textColor="@color/Black"
                android:text="6s" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/batsman_strike_rate"
                android:textColor="@color/Black"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:textAlignment="center"
                android:maxLength="6"
                android:text="S/R" />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
    <View style="@style/Divider" />
</LinearLayout>