<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:background="@color/white_layout">


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragmentContainer">

    </FrameLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard_layout">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/profile_cardView"
                app:cardBackgroundColor="@color/cardView"
                app:cardElevation="2dp"
        >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            android:id="@+id/profileImage_Name_layout">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_margin="10dp"
                        app:civ_border_color="@color/Black"
                        app:civ_border_width="2dp"
                        android:src="@drawable/ic_account_circle_black_24dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/profile_Image_DashboardActivity"
                        android:layout_alignParentStart="true"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="Shahid Afridi"
                        style="@style/teamNameTextStyle"
                        android:id="@+id/playerName_DashboardActivity"
                        android:layout_toEndOf="@id/profile_Image_DashboardActivity"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Bowling All-rounder"
                        style="@style/teamNameTextStyle"
                        android:id="@+id/playerRole_DashboardActivity"
                        android:layout_below="@+id/playerName_DashboardActivity"
                        android:layout_toEndOf="@id/profile_Image_DashboardActivity"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_toStartOf="@+id/playerAge_DashboardActivity"
                        android:text="Age: "
                        style="@style/teamNameTextStyle"
                        android:id="@+id/playerAge_text_DashboardActivity"

                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="44"
                        style="@style/teamNameTextStyle"
                        android:id="@+id/playerAge_DashboardActivity"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="City: "
                        style="@style/teamNameTextStyle"
                        android:id="@+id/playerCity_text_DashboardActivity"
                        android:layout_toStartOf="@+id/playerCity_DashboardActivity"
                        android:layout_below="@+id/playerAge_text_DashboardActivity"

                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Karachi"
                        style="@style/teamNameTextStyle"
                        android:id="@+id/playerCity_DashboardActivity"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:layout_below="@+id/playerAge_DashboardActivity"
                        />


                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                android:layout_below="@id/profile_Image_DashboardActivity"
                android:layout_alignParentBottom="true">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginRight="2dp"
                    >

                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <androidx.cardview.widget.CardView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:id="@+id/matches_count_Card_DashboardActivity"
                                    app:cardBackgroundColor="@color/DimGray"
                                    app:cardElevation="10dp"
                                    app:cardCornerRadius="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"

                                    >

                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Match"
                                        android:id="@+id/textView_matches_dashboard"
                                        android:textAllCaps="true"
                                        android:textAlignment="center"
                                        android:layout_marginTop="5dp"
                                        android:textColor="@color/White"
                                        android:textSize="22sp"

                                        />

                                <TextView
                                        android:id="@+id/matches_figures_Dashboard"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ems="10"
                                        android:text="524"
                                        android:textColor="@color/Black"
                                        android:textAlignment="center"
                                        android:textSize="25sp"
                                        android:layout_marginTop="45dp"
                                         />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>


                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                        <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:id="@+id/BattingCard_DashboardActivity"
                                app:cardBackgroundColor="@color/DimGray"
                                app:cardElevation="10dp"
                                app:cardCornerRadius="10dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"


                                >

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Runs"
                                    android:id="@+id/textView_Runs_dashboard"
                                    android:textAllCaps="true"
                                    android:textAlignment="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/White"
                                    android:textSize="22sp"

                                    />

                            <TextView
                                    android:id="@+id/batting_figures_dashboard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:text="11196"
                                    android:textColor="@color/Black"
                                    android:textAlignment="center"
                                    android:textSize="25sp"
                                    android:layout_marginTop="45dp" />

                        </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >

                        <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:id="@+id/BowlingCard_DashboardActivity"
                                app:cardBackgroundColor="@color/DimGray"
                                app:cardElevation="10dp"
                                app:cardCornerRadius="10dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"


                                >

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Wickets"
                                    android:id="@+id/textView_wickets_dashboard"
                                    android:textAllCaps="true"
                                    android:textAlignment="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/White"
                                    android:textSize="22sp"

                                    />

                            <TextView
                                    android:id="@+id/bowling_figures_dashboard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:text="541"
                                    android:textColor="@color/Black"
                                    android:textAlignment="center"
                                    android:textSize="25sp"
                                    android:layout_marginTop="50dp"  />

                        </androidx.cardview.widget.CardView>

                        </RelativeLayout>




                    </LinearLayout>

                </RelativeLayout>

                </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_cardView"
            android:id="@+id/upcoming_match_layout"
            >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/empty_match_card_on_dashboard"
            app:cardBackgroundColor="@color/lightGray"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Live and Upcoming Matches will be shown here."
                android:textSize="25sp"
                android:textColor="@color/Black"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingHorizontal="25dp"
                >

            </TextView>

        </com.google.android.material.card.MaterialCardView>



        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="10dp"
                android:layout_margin="2dp"
                app:cardElevation="10dp"
                android:id="@+id/live_match_list_card_view_dashboard"
                app:cardBackgroundColor="@color/cardView"
                tools:targetApi="o" app:cardMaxElevation="10dp">


            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:id="@+id/upcoming_match_card_recycler_view_dashboard"
                    android:layout_marginStart="2dp"

                    >

            </androidx.recyclerview.widget.RecyclerView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:id="@+id/live_match_card_recycler_view_dashboard"
                android:layout_marginStart="2dp"

                >

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:id="@+id/team_list_card_view_dashboard"
                android:layout_below="@id/upcoming_match_layout"
                android:elevation="10dp"
                android:layout_margin="2dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/cardView"
                tools:targetApi="o" app:cardMaxElevation="10dp">


            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:id="@+id/dashboard_team_recyclerView"
                    android:layout_marginStart="2dp"

                    >

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>

</RelativeLayout>
